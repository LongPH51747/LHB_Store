<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screen.OrderDetailsScreen">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/imgUserAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_account_circle_24"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvOrderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn hàng của bạn"
                android:textSize="14sp"
                android:textColor="#888888" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgVoucherIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/voucher"
            android:contentDescription="Voucher Icon"
            />
    </LinearLayout>

    <!-- Order Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF">

        <ProgressBar
            android:id="@+id/progressOrderStatus"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:progress="50"
            android:max="100"
            android:progressTint="#4CAF50"
            android:backgroundTint="#D3D3D3" />

        <TextView
            android:id="@+id/tvOrderCurrentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Chờ vận chuyển"
            android:textSize="14sp"
            android:textColor="#4CAF50" />
    </LinearLayout>

    <!-- Order Details -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="8dp">

            <!-- Details Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã đơn hàng: #12345"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày đặt: 2024-11-19"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvOrderQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng: 3"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvOrderPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá tiền: 450,000 VNĐ"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvShippingFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phí vận chuyển: 30,000 VNĐ"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giảm giá: 50,000 VNĐ"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Product Image -->
            <ImageView
                android:id="@+id/imgOrderProduct"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/img_2"
                android:scaleType="centerCrop"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Total Amount -->
        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="end"
            android:layout_marginHorizontal="10dp"
            android:background="#FFFFFF"
            android:text="Tổng tiền: 430,000 VNĐ"
            android:textSize="18sp"
            android:textColor="#4CAF50"
            android:textStyle="bold" />
    </LinearLayout>

    </LinearLayout>

