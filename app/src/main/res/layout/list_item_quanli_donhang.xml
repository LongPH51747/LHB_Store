<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="130dp"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/img_sp_donhang"
                android:layout_height="130dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_ma_donhang"
                android:layout_toRightOf="@+id/img_sp_donhang"
                android:layout_marginHorizontal="10dp"
                android:text="mã sản phẩm: abc123"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/tv_ma_donhang"
                android:id="@+id/tv_name_sp_donhang"
                android:layout_marginVertical="10dp"
                android:layout_toRightOf="@+id/img_sp_donhang"
                android:layout_marginHorizontal="10dp"
                android:text="tên sản phẩm: j j đó"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_order_date"
                android:layout_toRightOf="@+id/img_sp_donhang"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@+id/tv_name_sp_donhang"
                android:text="ngày đặt hàng: 20-10-2024"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btn_confirm_donhang"
                android:text="xác nhận đơn hàng"
                android:backgroundTint="#003A77"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/img_sp_donhang"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>