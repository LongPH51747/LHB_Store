<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_width="170dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:id="@+id/img_sp_admin"
            android:src="@drawable/ic_launcher_background"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@+id/img_sp_admin"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/tv_name_sp_admin"
            android:text="áo này màu đỏ rất là đẹp luôn"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@+id/tv_name_sp_admin"
            android:layout_width="wrap_content"
            android:id="@+id/tv_price_sp_admin"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:textColor="#ff00"
            android:text="đ150.000"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:layout_alignParentLeft="true"
            android:layout_width="20dp"
            android:id="@+id/chk_hidden_sp"
            android:layout_below="@id/tv_name_sp_admin"
            android:layout_margin="10dp"
            android:layout_height="20dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>